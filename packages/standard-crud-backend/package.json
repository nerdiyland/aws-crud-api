{
  "name": "@nerdiyland/aws-crud-api-standard-crud-backend",
  "version": "1.0.0",
  "description": "Lambda backend runtime for AWS CRUD API construct - provides CRUD management functionality",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "*.js",
    "*.d.ts",
    "models/**/*",
    "util/**/*"
  ],
  "scripts": {
    "build": "npm i && tsc && rm -rf node_modules && npm i --only=prod",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register '**/*.spec.ts'",
    "test:coverage": "nyc npm run test",
    "clean": "rm -rf *.js *.d.ts models/**/*.js models/**/*.d.ts util/**/*.js util/**/*.d.ts"
  },
  "keywords": [
    "aws",
    "lambda",
    "crud",
    "dynamodb",
    "s3",
    "backend",
    "runtime"
  ],
  "author": "Pelayo Sanchez <nerdiyland@gmail.com>",
  "license": "MIT",
  "homepage": "https://nerdiyland.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/nerdiyland/aws-crud-api.git",
    "directory": "packages/standard-crud-backend"
  },
  "bugs": {
    "url": "https://github.com/nerdiyland/aws-crud-api/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^18.19.0",
    "@types/sinon": "^10.0.2",
    "@types/uuid": "^8.3.0",
    "aws-sdk-mock": "^5.8.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "sinon": "^9.2.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.25.1",
    "aws-sdk": "^2.1691.0",
    "moment": "^2.29.1",
    "uuid": "^8.3.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
